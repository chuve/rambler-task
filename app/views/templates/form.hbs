<form>
    <h2>Дата: {{date}}</h2>
    <div>
        <label for="title">День под девизом</label>
        <input type="text" name="title" value="{{title}}">
    </div>
    <div>
        <label for="text">Заметки</label>
        <textarea name="text" id="" cols="30" rows="10">{{text}}</textarea>
    </div>
    <a data-click="save">Сохранить</a>
    <a data-click="cancel">Отмена</a>
</form>